#include "main.h"
#define ARM_MATH_CM4
#include "arm_math.h"
#define NUM_ITERATIONS 30
void c_sqrt(float32_t in, float32_t *pOut) {
	// initial guess x_0
	float32_t x_0 = in/2; // divide by 2

	// iteration loops
	for (int i = 0; i < NUM_ITERATIONS; i++) {
		x_0 = (x_0*x_0 + in)/(2*x_0);
	}
	(*pOut) = x_0;
}
