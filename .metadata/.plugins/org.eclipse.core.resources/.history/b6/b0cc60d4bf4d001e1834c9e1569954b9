#include "main.h"
#define NUM_ITERATIONS 4
void c_sqrt(float32_t in, float32_t *pOut) {
	// initial guess x_0
	float32_t x_0 = in >> 1; // Right shift by 1 to divide by 2

	// iteration loops
	for (int i = 0; i < NUM_ITERATIONS; i++) {
		x_0 = (x_0*x_0 - in)/(2*x_0);
	}
	(*pOut) = x_0;
}
